<%- include('partials/header') %>

<main
  class="container"
  style="
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  "
>
  <div
    style="
      background: #23232a;
      border-radius: 18px;
      box-shadow: 0 2px 16px rgba(0, 0, 0, 0.22);
      padding: 3rem 2.5rem;
      text-align: center;
      max-width: 420px;
    "
  >
    <h1 style="color: #fbbf24; font-size: 2.5rem; margin-bottom: 1.2rem">
      Oops!
    </h1>
    <p style="color: #e5e7eb; font-size: 1.15rem; margin-bottom: 1.5rem">
      Something went wrong.<br />We're sorry, but the page you requested could
      not be found or an error occurred.
    </p>
    <div
      style="
        color: #ef4444;
        font-size: 1.05rem;
        margin-bottom: 1.2rem;
        background: #18181b;
        border-radius: 8px;
        padding: 0.7rem;
      "
    >
      Page not found :(
    </div>
    <a href="/" style="text-decoration: none"
      ><button
        class="cta-btn"
        style="font-size: 1.08rem; padding: 0.9rem 2.2rem"
      >
        Go Home
      </button></a
    >
  </div>
</main>

<%- include('partials/footer') %>
